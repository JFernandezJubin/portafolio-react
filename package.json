{
  "name": "portafolio-react",
  "description": "Portafolio personal de Omar Flores Grimontt, desarrollador front-end.",
  "version": "0.1.0",
  "author": "Omar Flores <omarefg92@gmail.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "react": "16.5.1",
    "react-dom": "16.5.1",
    "react-scripts": "1.1.5"
  },
  "scripts": {
    "start": "npm-run-all -p watch:css start-js",
    "build": "npm-run-all build:css build-js",
    "test": "react-scripts test --env=jsdom",
    "start-js": "react-scripts start",
    "build-js": "react-scripts build",
    "build:css": "postcss src/styles/main.pcss -o src/index.css",
    "watch:css": "postcss src/styles/main.pcss -o src/index.css -w"
  },
  "devDependencies": {
    "autoprefixer": "9.1.5",
    "eslint": "5.6.0",
    "npm-run-all": "4.1.3",
    "postcss": "7.0.2",
    "postcss-cli": "6.0.0",
    "postcss-import": "12.0.0",
    "postcss-nested": "4.1.0",
    "postcss-preset-env": "6.0.3"
  }
}
